<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="true">
		<layer-list>
			<item>
				<shape>
					<solid android:color="@color/main_color" />
					<padding android:left="@dimen/widget_size_1dp" android:top="@dimen/widget_size_1dp" android:right="@dimen/widget_size_1dp"/>
				</shape>
			</item>
			<item android:drawable="@color/white" />
		</layer-list>
	</item>
	<item android:state_checked="false">
		<layer-list>
			<item>
				<shape>
					<solid android:color="@color/main_color" />
					<padding android:bottom="@dimen/widget_size_1dp" />
				</shape>
			</item>
			<item android:drawable="@color/umeng_fb_gray" />
		</layer-list>
	</item>
</selector>
