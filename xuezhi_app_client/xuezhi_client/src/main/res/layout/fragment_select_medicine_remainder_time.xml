<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/select_medicine_remainder_time_ll"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
	xmlns:tools="http://schemas.android.com/tools">

	<LinearLayout
		android:id="@+id/header_bg_ll"
		android:layout_width="match_parent"
		android:layout_height="93dp"
		android:background="#70000000"
		android:clickable="true"
		android:orientation="vertical"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffffff"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="15dp"
		android:id="@+id/tips_region_ll">

		<TimePicker
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/timePicker"
			android:layout_gravity="center_horizontal"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/bottom_bg_ll"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:background="@color/mask"
		android:clickable="true"
		android:orientation="vertical">

	</LinearLayout>

	<fragment
		android:id="@+id/common_bottom_fragment"
		android:name="com.module.widget.bottom.BottomCommon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:layout="@layout/include_bottom"/>

</LinearLayout>
