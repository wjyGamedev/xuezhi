<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@color/white"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/widget_size_5dp"
			android:layout_marginBottom="@dimen/widget_size_5dp"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="@dimen/widget_size_15dp"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/medication_reminder_drug_time_title_text"
					android:textSize="@dimen/font_size_16sp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/medication_reminder_temp_data_text"
					android:textSize="@dimen/font_size_16sp"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/widget_size_15dp"
				android:layout_weight="1"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/medication_reminder_alert_state_title_text"
					android:textSize="@dimen/font_size_16sp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/medication_reminder_alert_state_open_text"
					android:textSize="@dimen/font_size_16sp"/>

			</LinearLayout>
		</LinearLayout>

		<!--<ListView-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content">-->
		<!-- -->
		<!--</ListView>-->

		<include layout="@layout/item_medication_reminder_info"/>

	</LinearLayout>

</LinearLayout>