<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:background="@color/main_bg_color"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:background="@color/white"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/drug_item_chlick_region_ll"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/drug_administration_drug_name_title_text"
							android:textSize="16sp"/>

						<TextView
							android:id="@+id/drug_name_tv"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/drug_administration_temp_data_text"
							android:textSize="16sp"/>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/drug_administration_alert_state_title_text"
							android:textSize="16sp"/>

						<TextView
							android:id="@+id/drug_reminder_state_tv"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/drug_administration_alert_state_open_text"
							android:textSize="16sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/drug_administration_drug_stock_title_text"
							android:textSize="16sp"/>

						<TextView
							android:id="@+id/drug_keep_num_tv"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/drug_administration_temp_data_text"
							android:textSize="16sp"/>

					</LinearLayout>


				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/drug_administration_drug_alert_title_text"
							android:textSize="16sp"/>

						<TextView
							android:id="@+id/drug_alert_num_tv"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/drug_administration_temp_data_text"
							android:textSize="16sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/drug_administration_add_time_text"
							android:textSize="16sp"/>

						<TextView
							android:id="@+id/drug_administration_add_date_tv"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/drug_administration_temp_data_text"
							android:textSize="16sp"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:orientation="horizontal">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/drug_administration_exhausted_time_text"
							android:textSize="16sp"/>

						<TextView
							android:id="@+id/drug_run_out_date_tv"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_weight="1"
							android:text="@string/drug_administration_temp_data_text"
							android:textSize="16sp"/>

					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginRight="5dp">

				<ImageView
					android:layout_width="20dp"
					android:layout_height="30dp"
					android:layout_alignParentLeft="true"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"
					android:layout_gravity="center"
					android:background="@drawable/img_right"/>

			</RelativeLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginRight="15dp">

			<include layout="@layout/item_dividing_line_horizontal_fine"/>

		</LinearLayout>

		<Button
			android:id="@+id/drug_item_list_del_btn"
			android:layout_width="80dp"
			android:layout_height="30dp"
			android:layout_gravity="right"
			android:layout_marginBottom="5dp"
			android:layout_marginRight="15dp"
			android:layout_marginTop="5dp"
			android:background="@color/main_color"
			android:text="删除"
			android:textColor="@color/white"
			android:textSize="16sp"/>

	</LinearLayout>

</LinearLayout>