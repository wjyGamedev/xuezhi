<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/main_bg_color"
			  android:orientation="vertical">

	<fragment
		android:id="@+id/common_header_fragment"
		android:name="com.module.widget.header.HeaderCommon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:layout="@layout/include_header"/>

	<include layout="@layout/item_dividing_line_horizontal"/>

	<ScrollView
		android:id="@+id/history_region_sv"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:visibility="visible">

		<FrameLayout
			android:id="@+id/history_region_fl"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:background="@color/white"
			android:orientation="vertical"
			android:visibility="visible">

		</FrameLayout>

	</ScrollView>

	<!--</LinearLayout>-->


	<!--</ScrollView>-->

	<!--<fragment-->
	<!--android:id="@+id/common_bottom_fragment"-->
	<!--android:name="com.module.widget.bottom.BottomCommon"-->
	<!--android:layout_width="match_parent"-->
	<!--android:layout_height="wrap_content"-->
	<!--tools:layout="@layout/include_bottom"/>-->

	<include layout="@layout/item_dividing_line_horizontal"/>

	<RadioGroup
		android:id="@+id/history_tabs_rg"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#ffffffff"
		android:orientation="horizontal"
		android:paddingTop="2.5dp"
		android:visibility="visible">

		<RadioButton
			android:id="@+id/chart_rbtn"
			style="@style/home_radio_button_style"
			android:checked="true"
			android:text="图表显示"
			android:textSize="20sp"/>

		<RadioButton
			android:id="@+id/list_rbtn"
			style="@style/home_radio_button_style"
			android:text="列表显示"
			android:textSize="20sp"/>

	</RadioGroup>


</LinearLayout>