<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:gravity="center"
		android:orientation="horizontal">

		<!--<TextView-->
		<!--android:layout_width="wrap_content"-->
		<!--android:layout_height="wrap_content"-->
		<!--android:text="日期："-->
		<!--android:textSize="20sp"/>-->

		<TextView
			android:id="@+id/date_tv"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="2015年11月11日"
			android:textSize="20sp"/>

	</LinearLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RadioGroup
			android:id="@+id/func_click_region_rgrp"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal">

			<RadioButton
				android:id="@+id/xuezhi_rbtn"
				style="@style/home_radio_button_style"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/bg_top_tab"
				android:button="@null"
				android:gravity="center"
				android:text=""
				android:textColor="@color/main_color"
				android:textSize="20sp"/>

			<RadioButton
				android:id="@+id/shenghua_rbtn"
				style="@style/home_radio_button_style"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@drawable/bg_top_tab"
				android:button="@null"
				android:gravity="center"
				android:text=""
				android:textColor="@color/main_color"
				android:textSize="20sp"/>

		</RadioGroup>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="已服用"
					android:textColor="@color/main_color"
					android:textSize="20sp"/>

				<FrameLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp">

					<ImageView
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_gravity="center_vertical|right"
						android:src="@drawable/bg_have_taken_num"/>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_gravity="center"
						android:text="99"
						android:textColor="@color/white"
						android:textSize="20sp"/>

				</FrameLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="未服用"
					android:textColor="#ff0000"
					android:textSize="20sp"/>

				<FrameLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp">

					<ImageView
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:layout_gravity="center_vertical|right"
						android:src="@drawable/bg_not_taken_num"/>

					<TextView
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:layout_gravity="center"
						android:text="99"
						android:textColor="@color/white"
						android:textSize="20sp"/>

				</FrameLayout>

			</LinearLayout>

		</LinearLayout>

	</FrameLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical">

	</LinearLayout>

</LinearLayout>