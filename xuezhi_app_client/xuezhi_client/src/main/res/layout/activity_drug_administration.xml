<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/main_bg_color"
			  android:orientation="vertical">

	<fragment
		android:id="@+id/common_header_fragment"
		android:name="com.module.widget.header.HeaderCommon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<ListView
				android:id="@+id/drug_info_display_lv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#ffffffff"
				android:choiceMode="singleChoice"
				android:divider="@color/divider_color"
				android:dividerHeight="0.100000024dp"
				android:listSelector="@drawable/bg_btn_translucent"
				android:scrollbars="none"/>

			<!--<LinearLayout-->
				<!--android:layout_width="match_parent"-->
				<!--android:layout_height="wrap_content"-->
				<!--android:background="@color/white">-->

				<!--<include layout="@layout/item_medication_details_label"/>-->

			<!--</LinearLayout>-->

		</LinearLayout>

	</ScrollView>

	<fragment
		android:id="@+id/common_bottom_fragment"
		android:name="com.module.widget.bottom.BottomCommon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"/>


</LinearLayout>