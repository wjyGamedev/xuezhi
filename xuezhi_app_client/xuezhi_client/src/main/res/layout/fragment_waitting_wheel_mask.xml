<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:background="@color/waitting_mask_color"
	tools:context="xiezheng.com.myapplication.MainActivity">

	<FrameLayout
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true">

		<ImageView
			android:id="@+id/waitting_wheel_img"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:src="@drawable/waitting_img"/>

		<ImageView
			android:id="@+id/waitting_wheel_sz_img"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:src="@drawable/waitting_sz_img"/>

		<ImageView
			android:id="@+id/waitting_wheel_fz_img"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:src="@drawable/waitting_fz_img"/>

	</FrameLayout>

</RelativeLayout>
