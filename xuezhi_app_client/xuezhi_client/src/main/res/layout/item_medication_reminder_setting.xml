<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/main_bg_color"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/widget_size_10dp"
		android:background="@color/white"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/widget_size_15dp"
			android:layout_marginRight="@dimen/widget_size_15dp"
			android:orientation="horizontal"
			android:id="@+id/medicine_name_region_ll">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/widget_size_10dp"
				android:layout_marginTop="@dimen/widget_size_10dp"
				android:text="@string/medication_reminder_drug_name_title_text"
				android:textSize="@dimen/font_size_20sp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/widget_size_10dp"
				android:layout_marginRight="@dimen/widget_size_10dp"
				android:layout_marginTop="@dimen/widget_size_10dp"
				android:layout_weight="1"
				android:gravity="right"
				android:hint="@string/medication_reminder_click_select_hint_text"
				android:textSize="@dimen/font_size_20sp"
				android:id="@+id/medicine_name_tv"/>

			<ImageView
				android:layout_width="@dimen/widget_size_20dp"
				android:layout_height="@dimen/widget_size_20dp"
				android:layout_gravity="center"
				android:background="@drawable/img_down"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="@dimen/widget_size_15dp"
			android:layout_marginRight="@dimen/widget_size_15dp">
			<include layout="@layout/item_dividing_line_horizontal_fine"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/widget_size_15dp"
			android:layout_marginRight="@dimen/widget_size_15dp"
			android:orientation="horizontal"
			android:id="@+id/rose_region_ll">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/widget_size_10dp"
				android:layout_marginTop="@dimen/widget_size_10dp"
				android:text="@string/medication_reminder_drug_dosage_title_text"
				android:textSize="@dimen/font_size_20sp"/>

			<EditText
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/widget_size_10dp"
				android:layout_marginRight="@dimen/widget_size_10dp"
				android:layout_marginTop="@dimen/widget_size_10dp"
				android:layout_weight="1"
				android:gravity="right"
				android:hint="@string/medication_reminder_click_input_hint_text"
				android:textSize="@dimen/font_size_20sp"
				android:id="@+id/rose_tv"
				android:inputType="number|numberDecimal"
				android:background="@null"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/widget_size_10dp"
				android:layout_marginTop="@dimen/widget_size_10dp"
				android:text="@string/medicine_reminder_add_medicine_uint_default"
				android:textSize="@dimen/font_size_20sp"
				android:id="@+id/medicine_unit_tv"/>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="@dimen/widget_size_15dp"
			android:layout_marginRight="@dimen/widget_size_15dp">
			<include layout="@layout/item_dividing_line_horizontal_fine"/>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="@dimen/widget_size_15dp"
			android:layout_marginRight="@dimen/widget_size_15dp">
			<include layout="@layout/item_dividing_line_horizontal_fine"/>
		</LinearLayout>

		<LinearLayout
			android:id="@+id/precation_region_ll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/widget_size_15dp"
			android:layout_marginRight="@dimen/widget_size_15dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/widget_size_10dp"
				android:layout_marginTop="@dimen/widget_size_10dp"
				android:text="注意事项："
				android:textSize="@dimen/font_size_20sp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:layout_marginBottom="@dimen/widget_size_10dp"
				android:layout_marginRight="@dimen/widget_size_10dp"
				android:layout_marginTop="@dimen/widget_size_10dp"
				android:layout_weight="1"
				android:gravity="right"
				android:hint="@string/medication_reminder_note_default_text"
				android:textSize="@dimen/font_size_20sp"
				android:id="@+id/precautions_tv"/>

		</LinearLayout>

		<include layout="@layout/item_dividing_line_horizontal"/>
	</LinearLayout>


</LinearLayout>