<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:layout_margin="@dimen/widget_size_10dp"
			  android:background="@color/white"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/widget_size_5dp"
				android:layout_marginLeft="@dimen/widget_size_15dp"
				android:layout_marginTop="@dimen/widget_size_5dp"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/drug_administration_page_title_text"
						android:textSize="@dimen/font_size_16sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/drug_administration_temp_data_text"
						android:textSize="@dimen/font_size_16sp"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/drug_administration_alert_state_title_text"
						android:textSize="@dimen/font_size_16sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/drug_administration_alert_state_open_text"
						android:textSize="@dimen/font_size_16sp"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/widget_size_5dp"
				android:layout_marginLeft="@dimen/widget_size_15dp"
				android:layout_marginTop="@dimen/widget_size_5dp"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/drug_administration_drug_stock_title_text"
						android:textSize="@dimen/font_size_16sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/drug_administration_temp_data_text"
						android:textSize="@dimen/font_size_16sp"/>

				</LinearLayout>


			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/widget_size_5dp"
				android:layout_marginLeft="@dimen/widget_size_15dp"
				android:layout_marginTop="@dimen/widget_size_5dp"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/drug_administration_drug_alert_title_text"
						android:textSize="@dimen/font_size_16sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/drug_administration_temp_data_text"
						android:textSize="@dimen/font_size_16sp"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/widget_size_5dp"
				android:layout_marginLeft="@dimen/widget_size_15dp"
				android:layout_marginTop="@dimen/widget_size_5dp"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/drug_administration_add_time_text"
						android:textSize="@dimen/font_size_16sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/drug_administration_temp_data_text"
						android:textSize="@dimen/font_size_16sp"/>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/widget_size_5dp"
				android:layout_marginLeft="@dimen/widget_size_15dp"
				android:layout_marginTop="@dimen/widget_size_5dp"
				android:orientation="horizontal">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/drug_administration_exhausted_time_text"
						android:textSize="@dimen/font_size_16sp"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:text="@string/drug_administration_temp_data_text"
						android:textSize="@dimen/font_size_16sp"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginRight="@dimen/widget_size_5dp">

			<ImageView
				android:layout_width="@dimen/widget_size_20dp"
				android:layout_height="@dimen/widget_size_30dp"
				android:layout_gravity="center"
				android:background="@drawable/img_right"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true"/>

		</RelativeLayout>

	</LinearLayout>

</LinearLayout>