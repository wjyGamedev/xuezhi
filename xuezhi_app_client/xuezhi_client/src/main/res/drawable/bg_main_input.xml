<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/widget_size_1dp" android:color="@color/main_color" />
            <padding android:left="@dimen/widget_size_10dp" android:top="@dimen/widget_size_5dp" android:right="@dimen/widget_size_10dp" android:bottom="@dimen/widget_size_5dp" />
            <corners android:radius="@dimen/widget_size_3dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/white" />
            <stroke android:width="@dimen/widget_size_1dp" android:color="@color/main_color" />
            <padding android:left="@dimen/widget_size_10dp" android:top="@dimen/widget_size_5dp" android:right="@dimen/widget_size_10dp" android:bottom="@dimen/widget_size_5dp" />
            <corners android:radius="@dimen/widget_size_3dp" />
        </shape>
    </item>
</selector>