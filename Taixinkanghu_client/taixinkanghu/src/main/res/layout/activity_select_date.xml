<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	android:id="@+id/select_date_activity"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:visibility="visible">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		>

		<!--<include-->
			<!--layout="@layout/include_header"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="wrap_content"/>-->
		<fragment
			android:id="@+id/common_header_fragment"
			android:name="com.module.widget.header.HeaderCommon"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				>


				<calendar.calendar.MaterialCalendarView
					android:id="@+id/calendar_view"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					/>

				<include
					android:id="@id/dividing_line"
					layout="@layout/item_dividing_line_horizontal"/>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="50dp"
					android:layout_marginRight="15dp"
					android:layout_marginTop="5dp"
					android:orientation="horizontal">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginRight="5dp"
						android:src="@drawable/dayall"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_weight="1"
						android:text="全天24小时陪护,从9点至次日9点。"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="50dp"
					android:layout_marginRight="15dp"
					android:orientation="horizontal">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginRight="5dp"
						android:src="@drawable/day"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_weight="1"
						android:text="白天12小时陪护，从9点至21点。"/>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="5dp"
					android:layout_marginLeft="50dp"
					android:layout_marginRight="15dp"
					android:orientation="horizontal">

					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginRight="5dp"
						android:src="@drawable/night"/>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_weight="1"
						android:text="夜晚12小时陪护，从21点至次日9点。"/>

				</LinearLayout>

				<include
					android:id="@id/dividing_line"
					layout="@layout/item_dividing_line_horizontal"/>

				<LinearLayout
					android:id="@+id/date_select_region"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginLeft="20dp"
					android:layout_marginRight="20dp"
					android:layout_marginBottom="10dp"
					android:orientation="horizontal">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:gravity="center"
						android:textSize="14sp"
						android:text="服务时间:"/>

					<TextView
						android:id="@+id/select_date_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_weight="1"
						android:gravity="center"
						android:textSize="14sp"/>

					<!--<ImageView-->
						<!--android:id="@+id/down_date_img"-->
						<!--android:layout_width="16dp"-->
						<!--android:layout_height="16dp"-->
						<!--android:layout_gravity="center_vertical"-->
						<!--android:background="@drawable/img_down"/>-->

				</LinearLayout>

				<include
					android:id="@id/dividing_line"
					layout="@layout/item_dividing_line_horizontal"/>

			</LinearLayout>
		</ScrollView>

		<!--<include-->
			<!--layout="@layout/include_bottom_btn"-->
			<!--android:layout_width="match_parent"-->
			<!--android:layout_height="wrap_content"/>-->

		<fragment
			android:id="@+id/common_bottom_fragment"
			android:name="com.module.widget.bottom.BottomCommon"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>
	</LinearLayout>

</FrameLayout>