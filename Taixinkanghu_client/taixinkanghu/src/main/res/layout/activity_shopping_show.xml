<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical"
			  tools:context="com.taixinkanghu.app.ui.activity.SaleInfoActivity">

	<!--<include layout="@layout/include_header"/>-->
	<fragment
		android:id="@+id/common_header_fragment"
		android:name="com.module.widget.header.HeaderCommon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/img_info"
			android:layout_width="match_parent"
			android:layout_height="240dp">

		</ImageView>

		<TextView
			android:id="@+id/info_title"
			android:layout_width="match_parent"
			android:layout_height="35dp"
			android:layout_marginLeft="15dip"
			android:gravity="center_vertical"
			android:text="促销信息展示文字。"
			android:textSize="20sp"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_bule_frame">

			<TextView
				android:id="@+id/info_text_red"
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="15dp"
				android:gravity="center_vertical"
				android:text="促销信息展示文字。"
				android:textColor="#cc0000"/>

		</LinearLayout>

		<TextView
			android:id="@+id/info_content"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15dp"
			android:layout_marginTop="15dp"
			android:text="促销信息展示文字。"/>

	</LinearLayout>

	<!--<include layout="@layout/include_main_button"/>-->
	<fragment
		android:id="@+id/common_bottom_fragment"
		android:name="com.module.widget.bottom.BottomCommon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>

</LinearLayout>
